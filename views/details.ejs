<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('includes/head.ejs') %>
  </head>

  <body>
    <%-include('includes/navbar.ejs') %>

    <div class="container my-5">
      <h1><%= user[1] %> <%= user[3] %></h1>
      <ul class="list-group">
        <li class="list-group-item"><strong>Email : </strong><%= user[5] %></li>
        <li class="list-group-item"><strong>Phone : </strong><%= user[7] %></li>
      </ul>

      <div class="d-flex my-3">
        <button class="btn btn-primary pull-left mx-2">
          <a href="/" class="text-white text-decoration-none">Back</a>
        </button>

        <form
          method="POST"
          class="pull-right mx-2"
          action="/user/delete/<%= user.id %>?_method=DELETE"
        >
          <input
            type="submit"
            class="btn btn-danger pull-right"
            value="Delete"
          />
        </form>
      </div>
    </div>

    <%-include('includes/bootstrapScript.ejs') %>
  </body>
</html>
